{
    "compilerOptions": {
        "allowJs": false,
        "skipLibCheck": true,
        "target": "ES5",
        // "module": "ESNext",
        "importHelpers": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "rootDir": "src",
        "strict": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitReturns": true,
        "noUnusedParameters": true,
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.vue",
    ],
    "exclude": [
        "node_modules"
    ]
}